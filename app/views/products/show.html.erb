<div class="header">
  <div class="wrap">   
     <div class="header-top"> 
          <div class="logo">
<img src="/assets/l.png"  style="height: 150px; display: inline; ">
        <h2 style="display: inline;"> The Car Shop </h2>      </div>
      <div class="clear"></div> 
      </div>
  </div>
  <div class="header-bottom">
    <div class="wrap">  
    <div id="cssmenu" style="margin-right:-80px;">
       <ul style="margin-bottom:0;">
         <li><%= link_to 'Home', controller:"pages" %><li>
         <%if current_user%>
                <% if current_user.role_id.equal?(1) %>
                  <li><%= link_to 'Product', products_path %></li>
              <%end %>
               <% if current_user.role_id.equal?(2) %>
                   <li><%= link_to 'My previous orders', show_all_history_url %></li>
                   <li class="active"><%= link_to 'Show products', show_all_url %></li>
                   <li><%= link_to 'Cart', show_all_cart_url %></li>
                   <li><%= link_to 'My services', show_my_services_path %></li>
               <%end %>
               <% if current_user.role_id.equal?(3) %><!-- za servisera-->
                  <li><%= link_to 'Show products', show_all_url %></li>
                  <li><%= link_to 'Service', services_path %></li>
               <%end%>
              
               <%end%>
         <% if current_user %>
         <li><%= link_to "#{current_user.full_name}", show_user_path(current_user.id) %></li>
         <li><%= link_to "Log Out", session_path("current"), method: "delete" %> </li>
   
       <% else %>
         <li><%= link_to 'Login', new_session_path %></li>
         <li><%= link_to 'Sign up', new_user_path %><li>
         <%end %>
      </ul>
    </div>
    <div class="clear"></div> 
    </div>
   </div>
</div>

<div class="container">
<div class="row">
        <div class="col-md-2">
  <img src="https://img.icons8.com/bubbles/100/000000/car.png">
</div>
  <div class="col-md-6">
  <form>
  <p id="notice"><%= notice %></p>
    <div class="form-group">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>
    </div>
    <div class="form-group">
      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
    </div>
    <div class="form-group">
     <p>
      <strong>Availability:</strong>
      <%= @product.availability %>
    </p>
    </div>
    <div class="form-group">
     <p>
  <strong>Code:</strong>
  <%= @product.code %>
</p>
    </div>
    <div class="form-group">
     <p>
  <strong>Price:</strong>
  <%= @product.price %> $
</p>
    </div>
    <div class="form-group">
     <p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>
    </div>
  </form>
  </div>
  </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-4 col-md-2"></div>

  <div class="col-sm-4 col-md-1">
    <%if current_user.role_id.equal?(1) %>
      <button type="button" class="btn btn-default">
        <%= link_to 'Back', products_path %>
      </button>
    <%else %>
      <button type="button" class="btn btn-default">
      <%= link_to 'Back', show_all_url %>
      </button>
    <%end%>
  </div>

  <div class="col-sm-4 col-md-5"></div>

  <div class="col-sm-4 col-md-1">
    <%if current_user.role_id.equal?(1) %>
      <button type="button" class="btn btn-default">
      <%= link_to 'Edit', edit_product_path(@product) %> 
      </button>
    <%end%>
  </div>
  
  <div class="col-sm-4 col-md-1">
    <button type="button" class="btn btn-default">
    <%= link_to "Add to cart", add_to_cart_url(:id => @product.id, :user_id => current_user.id), class: "button" %>
    </button>
  </div>
  <div class="col-sm-4 col-md-2"></div>
</div>

