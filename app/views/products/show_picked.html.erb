<p id="notice"><%= notice %></p>

 
<p>
  <strong>Name:</strong>
  <%= product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= product.description %>
</p>

<p>
  <strong>Availability:</strong>
  <%= product.availability %>
</p>

<p>
  <strong>Code:</strong>
  <%= product.code %>
</p>

<p>
  <strong>Price:</strong>
  <%= product.price %> $
</p>

<p>
  <strong>Quantity:</strong>
  <%= product.quantity %>
</p>

<div class="col-md-2">
  <%= link_to 'Back to products', show_all_url %>
</div>
<div class="col-md-2">
  <% if current_user.role_id.equal?(2) %>
    <%= link_to "Add to cart", add_to_cart_url(:id => product.id, :user_id => current_user.id), class: "button" %>
  <% end %>
</div>
