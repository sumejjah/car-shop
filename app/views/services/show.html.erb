<div class="header">
  <div class="wrap">   
     <div class="header-top"> 
          <div class="logo">
<img src="/assets/l.png"  style="height: 150px; display: inline; ">
        <h2 style="display: inline;"> The Car Shop </h2>      </div>
      <div class="clear"></div> 
      </div>
  </div>
  <div class="header-bottom">
    <div class="wrap">  
    <div id="cssmenu" style="margin-right:-80px;">
       <ul style="margin-bottom:0;">
         <li><%= link_to 'Home', controller:"pages" %><li>
         <%if current_user%>
                <% if current_user.role_id.equal?(1) %>
                  <li><%= link_to 'Product', products_path %></li>
              <%end %>
               <% if current_user.role_id.equal?(2) %>
                   <li><%= link_to 'My previous orders', show_all_history_url %></li>
                   <li><%= link_to 'Show products', show_all_url %></li>
                   <li><%= link_to 'Cart', show_all_cart_url %></li>
                   <li class="active"><%= link_to 'My services', show_my_services_path %></li>
               <%end %>
               <% if current_user.role_id.equal?(3) %><!-- za servisera-->
                  <li><%= link_to 'Show products', show_all_url %></li>
                  <li class="active"><%= link_to 'Service', services_path %></li>
               <%end%>            
               <%end%>
         <% if current_user %>
         <li><%= link_to "#{current_user.full_name}", show_user_path(current_user.id) %></li>
         <li><%= link_to "Log Out", session_path("current"), method: "delete" %> </li>
   
       <% else %>
         <li><%= link_to 'Login', new_session_path %></li>
         <li><%= link_to 'Sign up', new_user_path %><li>
         <%end %>
      </ul>
    </div>
    <div class="clear"></div> 
    </div>
   </div>
</div>

<p id="notice"><%= notice %></p>

<div class="container">
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <p>
      <strong>Car name:</strong>
      <%= @service.car_name %>
    </p>

    <p>
      <strong>Bought here:</strong>
      <%= @service.bought_here %>
    </p>

    <p>
      <strong>User:</strong>
      <%= @service.user_id %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @service.description %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= @service.status %>
    </p>

  </div>
  </div>
</div>
<div class="container">
  <div class="row">
  <div class="col-sm-3 col-md-3 col-lg-3"></div>
  <div class="col-sm-3 col-md-3 col-lg-3">
    <button type="button" class="btn btn-default float-right">
    <% if current_user.role_id.equal?(2) %>
      <%= link_to 'Show my services', show_my_services_path %>
    <%end %>
    <% if current_user.role_id.equal?(3) %>
      <%= link_to 'Back', services_path %>
    <%end%>  
    </button>
  </div>
  <div class="col-sm-3 col-md-3 col-lg-3">
    <button type="button" class="btn btn-default float-left">
    <%= link_to 'Edit', edit_service_path(@service) %>
    </button>
  </div>
  <div class="col-sm-3 col-md-3 col-lg-3"></div>
</div>
</div>